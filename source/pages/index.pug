doctype html
html
    head
        link(rel="stylesheet", href="styles/main.css")
        meta(charset="utf-8")
    body
        include sections/footer.pug
        //-Declaration
        mixin list
            ul
                li vasilek
                li roza
                li romashka
                li dub
        //-Use
        +list
        mixin pet(name)
            li.pet=name
        ul
            +pet('romashka')
            +pet('roza')
        +list
        mixin article(title)
            .article
                .article-wrapper
                h1=title
                if block
                    block
                else
                   p No content provided
        +article('hello world')
        +article('Hello world')
           p This is my dog
           p Animals    
        